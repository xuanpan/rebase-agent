# Environment configuration for Rebase Agent

# Required API Keys
OPENAI_API_KEY=<openai_api_key>
ANTHROPIC_API_KEY=<anthropic_api_key>

# Database Configuration (Optional)
# DATABASE_URL=postgresql://username:password@localhost:5432/rebaseagent
# DATABASE_POOL_SIZE=5
# DATABASE_POOL_MAX_OVERFLOW=10

# Redis Configuration (Removed for POC simplicity)
# Future: Add Redis for production scaling
# REDIS_URL=redis://localhost:6379/0

# Application Settings
APP_NAME="Rebase Agent"
APP_VERSION="0.1.0"
DEBUG=true
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your_secret_key_for_jwt_signing_here_make_it_long_and_random
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# AI Configuration
DEFAULT_LLM_PROVIDER=openai
DEFAULT_MODEL=gpt-4-turbo-preview
MAX_TOKENS=4000
TEMPERATURE=0.7
MAX_CONVERSATION_HISTORY=50

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Monitoring
PROMETHEUS_METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# External Integrations
GITHUB_TOKEN=your_github_token_for_code_analysis
SONARQUBE_URL=http://localhost:9000
SONARQUBE_TOKEN=your_sonarqube_token